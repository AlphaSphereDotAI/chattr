{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "labels": [
      "Lockfile",
      "dependencies"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "labels": [
        "PyProject",
        "dependencies"
      ],
      "matchManagers": [
        "pep621"
      ],
      "matchPackageNames": [
        "*"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
