{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "extends": [
    "config:best-practices"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "matchPackageNames": [
        "*"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "pre-commit": {
    "enabled": true
  }
}
